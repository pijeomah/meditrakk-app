<!DOCTYPE html>
<html lang="en">
<%- include ('partials/_head') %>
<%- include ('partials/_nav') %>
        <h1 class="text-3xl capitalize">Welcome, <%= user.userName %></h1>
        <div class="w-2/5 mt-8 mx-auto rounded-lg shadow-lg">    
     <ul>
            <% pills.forEach( el => { %>
                <li class='pills p-8 w-full  mb-4' data-id='<%=el._id%>'>
                    <div class="flex items-center justify-center ">
                        <a href="pills/view/<%=el._id %>"><span class="capitalize pr-4 font-bold"><%= el.name %></span>
                        </a>
                       <span class="font-semibold"><%= el.total%></span>
                    </div>
                   <form 
                   action="/pills/updatePill/<%=el._id%>?_method=PUT" method="POST">
                   <div  class="flex flex-row justify-center space-x-8 ">
                    <button class="bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
                    border border-green-400 hover:border-transparent rounded flex">Take</button>
                </form>
                 <form action="/pills/deletePills/<%=el._id%>?_method=DELETE" method="POST">
                     <button class="bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
                     border border-green-400 hover:border-transparent rounded flex ">Delete</button>
                 </form>
                 <form action="pills/editPill/<%=el._id%>" method="GET">
                     <button class="bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
                     border border-green-400 hover:border-transparent rounded flex">Edit</button>
                 </form>
                   </div>
                    
                </li>      
    <% }) %> 
    </div>   
    </ul>


    <div class=" mt-16 w-40 h-10 mx-auto items-center">
        <a href="/pills/form" class="flex justify-center item-center w-full">
            <button class=
            "bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
            border border-green-400 hover:border-transparent rounded flex">Add Your Pills</button>
            
        </a>
    </div>
    <div class=" mt-4 w-40 h-10 mx-auto items-center">
        <a href="/pills/form" class="flex justify-center item-center w-full">
            <button class=
            "bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
            border border-green-400 hover:border-transparent rounded flex">Set Reminder</button>
            
        </a>
    </div>

    <script src="js/main.js"></script>
</html>