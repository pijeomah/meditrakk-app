
<%- include ('partials/_head') %>
<%- include ('partials/_nav') %>

<h1 class="text-3xl capitalize">Welcome, <%= user.userName %></h1>
<!-- Use max-width and grid to create a responsive layout -->
<div class=" w-full lg:w-2/5 mx-auto mt-16 shadow-lg rounded-lg">
    <ul>
        <% pills.forEach(el => { %>
            <li class='pills bg-green-white text-green-400 font-semibold hover:text-slate-300 p-8' data-id='<%= el._id %>'>
                <div class="flex items-center justify-center">
                    <a href="pills/view/<%= el._id %>">
                        <span class="capitalize pr-4 font-bold"><%= el.name %></span>
                    </a>
                    <span class="font-semibold"><%= el.total %></span>
                </div>
                
                <div class=" flex flex-wrap mx-auto justify-center space-x-6">
                    <form action="/pills/updatePill/<%= el._id %>?_method=PUT" method="POST" class="flex flex-wrap jsutify-center ">
                        <button class="bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
                        border border-green-400 hover:border-transparent rounded">Take</button>
                    </form>
                    <form action="/pills/deletePills/<%= el._id %>?_method=DELETE" method="POST">
                        <button class="bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
                        border border-green-400 hover:border-transparent rounded">Delete</button>
                    </form>
                    <form action="pills/editPill/<%= el._id %>" method="GET">
                        <button class="bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
                        border border-green-400 hover:border-transparent rounded">Edit</button>
                    </form>
                </div>
  
            </li>
        <% }) %>
    </ul>
</div>

    <div class=" mt-16 w-40 h-10 mx-auto items-center">
        <a href="/pills/form" class="flex justify-center item-center w-full">
            <button class=
            "bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
            border border-green-400 hover:border-transparent rounded flex">Add Your Pills</button>
            
        </a>
    </div>
    <div class=" mt-4 w-40 h-10 mx-auto items-center">
        <a href="/reminder" class="flex justify-center item-center w-full">
            <button class=
            "bg-transparent hover:bg-green-400 text-green-400 font-semibold hover:text-slate-300 py-0.5 px-4 
            border border-green-400 hover:border-transparent rounded flex">Set Reminder</button>
            
        </a>
    </div>

    <script src="js/main.js"></script>
</html>