<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meditrakk</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Pills</h1>
    <ul>
    <% pills.forEach( el => { %>
        <li class='pills' data-id='<%=el._id%>'>
            <a href="/pills/<%=el._id %>"><span><%= el.name %></span>
            </a>
           <span><%= el.total%></span>
           <form 
           action="/pills/updatePill/<%=el._id%>?_method=PUT" method="POST">
            <button>Take</button>
           </form>
            <form action="/pills/deletePills/<%=el._id%>?_method=DELETE" method="POST">
                <button>Delete</button>
            </form>
            <a href="/pills/editPill/<%=el._id%>" method="POST">
                <button>Edit</button>
            </a>
        </li>
    <% }) %>    
    </ul>

    <a href="/pills/form"><button>Create a New Pill</button></a>
   
    <!-- <form action="/todos/createTodo" method='POST'>
        <input type="text" placeholder="Enter Todo Item" name='todoItem'>
        <input type="submit">
    </form> -->

    <script src="js/main.js"></script>
</body>
</html>